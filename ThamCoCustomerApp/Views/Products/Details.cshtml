@model ThamCoCustomerApp.Models.ProductViewModel

@{
}
<link href="~/Stylesheet/bootstrap.css" rel="stylesheet" type="text/css" />
<link href="~/Stylesheet/site.css" rel="stylesheet" type="text/css" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <h4 class="text-muted">@Model.Brand</h4>
            <p class="lead">@Model.Description</p>
            <p><strong>Price: </strong>@Model.Price.ToString("C")</p>
            <a href="#" class="btn btn-primary btn-lg">Add to Cart</a>
        </div>
    </div>
</div>