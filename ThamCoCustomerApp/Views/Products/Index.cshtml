@model IEnumerable<ThamCoCustomerApp.Models.ProductViewModel>

@{
    ViewData["Title"] = "Products";
}
<link href="~/Stylesheet/bootstrap.css" rel="stylesheet" type="text/css" />
<link href="~/Stylesheet/site.css" rel="stylesheet" type="text/css" />

<div class="container mt-4">
    <h1 class="text-center mb-4">Products</h1>

    <form method="get" asp-action="Index" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search for products..." value="@ViewData["CurrentFilter"]" />
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </div>
    </form>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Brand</h6>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text"><strong>Price: </strong>@item.Price.ToString("C")</p>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>