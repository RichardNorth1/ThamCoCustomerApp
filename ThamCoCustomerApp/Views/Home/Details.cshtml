@model ThamCoCustomerApp.Models.ProductViewModel

@{
}

<link href="~/Stylesheet/bootstrap.css" rel="stylesheet" type="text/css" />
<link href="~/Stylesheet/site.css" rel="stylesheet" type="text/css" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <h4 class="text-muted">@Model.Brand</h4>
            <p class="lead">@Model.Description</p>
            <p><strong>Price: </strong>@Model.Price.ToString("C")</p>
            @if(User.Identity.IsAuthenticated){
            <p><strong>Stock Level: </strong>@Model.StockLevel</p>
            <form asp-controller="Basket" asp-action="AddToBasket" method="post">
                <input type="hidden" asp-for="ImageUrl" value="@Model.ImageUrl" />
                <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
                <input type="hidden" asp-for="CompanyId" value="@Model.CompanyId" />
                <input type="hidden" asp-for="Name" value="@Model.Name" />
                <input type="hidden" asp-for="Brand" value="@Model.Brand" />
                <input type="hidden" asp-for="Description" value="@Model.Description" />
                <input type="hidden" asp-for="Price" value="@Model.Price" />
                <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
            </form>
            }

        </div>
    </div>
</div>